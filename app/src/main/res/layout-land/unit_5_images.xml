<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imagesRoot"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/imagesTopContainer"
        android:name="com.example.myapplicationmp.unit_5.CoffeeFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/unit_5_coffee" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/imagesBottomContainer"
        android:name="com.example.myapplicationmp.unit_5.MyLogoFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/unit_5_logo" />


</LinearLayout>